{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "never",
    "focus": false,
    "panel": "shared"
  },
  "tasks": [
    {
      "label": "compile:data",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile:data"
      ],
      "problemMatcher": []
    },
    {
      "label": "compile:ts",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "compile:ts"
      ],
      "problemMatcher": "$tsc"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "clean"
      ],
      "problemMatcher": []
    },
    {
      "label": "coverage:on",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "coverage:on"
      ],
      "problemMatcher": []
    },
    {
      "label": "coverage:off",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "coverage:off"
      ],
      "problemMatcher": []
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "watch"
      ],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "ts",
          "background": {
            "beginsPattern": {
              "regexp": "^TSLint Pulse Start"
            },
            "endsPattern": {
              "regexp": "^TSLint Pulse End"
            }
          },
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "pattern": {
            "regexp": "^(.*)@\\[(\\d+,\\d+,\\d+,\\d+)\\]\\s+-\\s+(WARNING|ERROR):\\s+(.*)$",
            "file": 1,
            "location": 2,
            "severity": 3,
            "message": 4
          }
        },
        {
          "fileLocation": [
            "relative",
            "${workspaceFolder}"
          ],
          "background": {
            "beginsPattern": {
              "regexp": "^Data Pulse Start"
            },
            "endsPattern": {
              "regexp": "^Data Pulse End"
            }
          },
          "pattern": {
            "regexp": "^(.*):\\s+(.*) at line ([0-9]+), column ([0-9]+):$",
            "file": 1,
            "message": 2,
            "line": 3,
            "column": 4
          }
        }
      ]
    }
  ]
}
