{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      // Switch to 'es2017' with Node 9.
      "es2016",
      "es2017.intl",
      "es2017.object",
      "es2017.typedarrays",
      "es2017.sharedmemory"
    ],
    "sourceMap": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": []
  }
}
