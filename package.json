{
  "name": "item-filter-code",
  "description": "Support for editing Path of Exile item filters within Visual Studio Code.",
  "displayName": "Item Filter Code",
  "version": "0.1.0",
  "author": "Glen Marker",
  "publisher": "GlenCFL",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlenCFL/item-filter-code.git"
  },
  "categories": [
    "Linters",
    "Languages",
    "Snippets"
  ],
  "main": "./dist/client/main",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./ && gulp lint",
    "watch": "tsc -watch -p ./",
    "test": "",
    "clean": "gulp clean",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {},
  "devDependencies": {
    "@glencfl/tslint-config": "^1.3.2",
    "@types/gulp": "^4.0.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-tslint": "^8.1.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "vscode": "^1.1.10"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "activationEvents": [
    "onLanguage:item-filter"
  ],
  "contributes": {
    "languages": [
      {
        "id": "item-filter",
        "aliases": [
          "Item Filter"
        ],
        "extensions": [
          ".filter"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "item-filter",
        "scopeName": "source.filter",
        "path": "./syntaxes/ItemFilter.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "Item Filter Code",
        "properties": {
          "item-filter.classWhitelist": {
            "description": "Additional item classes considered to be valid within an item filter.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "resource"
          },
          "item-filter.baseWhitelist": {
            "description": "Additional item bases considered to be valid within an item filter.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "resource"
          }
        }
      }
    ]
  }
}
