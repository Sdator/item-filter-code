{
  "name": "item-filter-code",
  "description": "Support for editing Path of Exile item filters within Visual Studio Code.",
  "displayName": "Item Filter Code",
  "version": "0.1.0",
  "author": "Glen Marker",
  "publisher": "GlenCFL",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlenCFL/item-filter-code.git"
  },
  "categories": [
    "Linters",
    "Languages"
  ],
  "main": "./dist/client/main",
  "scripts": {
    "vscode:prepublish": "tsc -p . && gulp data",
    "compile": "tsc -p . && gulp lint && gulp data",
    "watch": "tsc -watch -p .",
    "test": "tsc -p .",
    "clean": "gulp clean",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode-languageclient": "^3.5.0",
    "vscode-languageserver": "^3.5.0",
    "vscode-nls": "^3.2.1"
  },
  "devDependencies": {
    "@glencfl/tslint-config": "^1.4.0",
    "@types/gulp": "^4.0.5",
    "@types/js-yaml": "^3.10.1",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-tslint": "^8.1.2",
    "js-yaml": "^3.10.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "vscode": "^1.1.10"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "activationEvents": [
    "onLanguage:item-filter"
  ],
  "contributes": {
    "languages": [
      {
        "id": "item-filter",
        "aliases": [
          "Item Filter"
        ],
        "extensions": [
          ".filter"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "item-filter",
        "scopeName": "source.filter",
        "path": "./syntaxes/ItemFilter.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "Item Filter Code",
        "properties": {
          "item-filter.classWhitelist": {
            "description": "Additional item classes considered to be valid within an item filter.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.baseWhitelist": {
            "description": "Additional item bases considered to be valid within an item filter.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.performanceHints": {
            "description": "Whether or not to display performance hints within the editor.",
            "type": "boolean",
            "default": true,
            "scope": "window"
          },
          "item-filter.performanceOptimization": {
            "description": "When formatting an item filter, allow the creation, editing, and reordering of rules in order to optimize the performance of the filter. Block position relative to other blocks will never be altered.",
            "type": "boolean",
            "default": false,
            "scope": "window"
          }
        }
      }
    ]
  }
}
