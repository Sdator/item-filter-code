{
  "name": "item-filter-code",
  "description": "Support for editing Path of Exile item filters within Visual Studio Code.",
  "displayName": "Item Filter Code",
  "version": "1.1.0",
  "author": "Glen Marker",
  "publisher": "GlenCFL",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlenCFL/item-filter-code.git"
  },
  "categories": [
    "Linters",
    "Languages"
  ],
  "keywords": [
    "item filter",
    "filter",
    "poe",
    "path of exile",
    "exile"
  ],
  "main": "./dist/client/main",
  "scripts": {
    "vscode:prepublish": "tsc -p . && gulp data",
    "compile": "tsc -p . && gulp lint && gulp data",
    "watch": "tsc -watch -p .",
    "test": "tsc -p .",
    "clean": "gulp clean",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode-languageclient": "^3.5.0",
    "vscode-languageserver": "^3.5.0",
    "vscode-nls": "^3.2.1"
  },
  "devDependencies": {
    "@glencfl/tslint-config": "^1.4.2",
    "@types/chai": "^4.1.2",
    "@types/gulp": "^4.0.5",
    "@types/js-yaml": "^3.10.1",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-tslint": "^8.1.2",
    "js-yaml": "^3.10.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "vscode": "^1.1.10"
  },
  "engines": {
    "vscode": "^1.18.0"
  },
  "activationEvents": [
    "onLanguage:item-filter"
  ],
  "contributes": {
    "languages": [
      {
        "id": "item-filter",
        "aliases": [
          "Item Filter"
        ],
        "extensions": [
          ".filter"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "item-filter",
        "scopeName": "source.filter",
        "path": "./syntaxes/ItemFilter.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "Item Filter Code",
        "properties": {
          "item-filter.baseWhitelist": {
            "title": "Base Whitelist",
            "description": "Additional item bases considered to be valid within item filters.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.classWhitelist": {
            "title": "Class Whitelist",
            "description": "Additional item classes considered to be valid within item filters.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.ruleWhitelist": {
            "title": "Rule Whitelist",
            "description": "Additional keywords considered to be valid block rules within item filters.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.soundWhitelist": {
            "title": "Sound Whitelist",
            "description": "Additional sound identifiers considered to be valid block rules within item filters.",
            "type": [
              "array"
            ],
            "default": [],
            "scope": "window"
          },
          "item-filter.performanceHints": {
            "title": "Performance Hints",
            "description": "Whether or not to display performance hints within the editor.",
            "type": "boolean",
            "default": true,
            "scope": "window"
          },
          "item-filter.alwaysShowAlpha": {
            "title": "Always Show Alpha",
            "description": "When using the color picker, output the alpha channel number for fully apparent colors.",
            "type": "boolean",
            "default": false,
            "scope": "window"
          }
        }
      }
    ]
  }
}
